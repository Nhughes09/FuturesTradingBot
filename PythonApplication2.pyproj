import os
import google.generativeai as genai

# Set your actual Gemini API key as an environment variable or in a secure configuration file
api_key = "AIzaSyCP1STMYE5-lGAi8gbDKsvtXl68ITaf9wU"
genai.configure(api_key=api_key)

# Create the model configuration
generation_config = {
    "temperature": 1,
    "top_p": 0.95,
    "top_k": 64,
    "max_output_tokens": 8192,
    "response_mime_type": "text/plain",
}

# Create the Gemini model
model = genai.GenerativeModel(
    model_name="gemini-1.5-flash",
    generation_config=generation_config,
)

# Start a new chat session
chat_session = model.start_chat(
    history=[]
)

# Function to get user input and send it to the chatbot
def get_user_input():
    return input("You: ")

# Main chatbot interaction loop
def main():
    print("Welcome to the Gemini Chatbot!")
    print("Type 'quit' at any time to end the conversation.")

    while True:
        user_input = get_user_input()

        if user_input.lower() == "quit":
            break

        response = chat_session.send_message(user_input)
        print("Bot:", response.text)

if __name__ == "__main__":
    main()
